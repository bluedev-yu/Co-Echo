<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8ffe0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/MAP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MAP"
                    android:textColor="#00B06A"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/MAP"
                    android:text="에코 맵"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"/>


                <ImageView
                    android:id="@+id/hambuger_menu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_baseline_menu_50" />

<!--                <ImageView-->
<!--                    android:id="@+id/search_bar"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="60dp"-->
<!--                    android:layout_below="@+id/map"-->
<!--                    app:srcCompat="@drawable/search_background" />-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/hambuger_menu"
                    android:orientation="vertical">

                        <SearchView
                            android:id="@+id/search_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/map"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/search_background"
                            android:iconifiedByDefault="false"
                            android:queryBackground="@null"
                            android:queryHint="검색어를 입력하세요"
                            android:theme="@style/SearchViewStyle"
                            android:visibility="visible" />

                        <RelativeLayout
                            android:id="@+id/map_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:visibility="visible">

                                <!--                        <androidx.recyclerview.widget.RecyclerView-->
                                <!--                            android:id="@+id/recyclerview_main"-->
                                <!--                            android:layout_width="match_parent"-->
                                <!--                            android:layout_height="wrap_content"-->
                                <!--                            android:layout_alignParentBottom="true"-->
                                <!--                            app:layout_behavior="@string/appbar_scrolling_view_behavior" />-->

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/review"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/white">

                                <ImageView
                                    android:id="@+id/hashtag1"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    app:srcCompat="@drawable/hashtag" />


                                <ImageView
                                    android:id="@+id/hashtag2"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_toEndOf="@+id/hashtag1"
                                    app:srcCompat="@drawable/hashtag" />

                                <ImageView
                                    android:id="@+id/imageView7"
                                    android:layout_width="18dp"
                                    android:layout_height="15dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginStart="71dp"
                                    android:layout_marginTop="91dp"
                                    app:srcCompat="@drawable/fullstar" />

                                <ImageView
                                    android:id="@+id/imageView6"
                                    android:layout_width="18dp"
                                    android:layout_height="15dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginStart="32dp"
                                    android:layout_marginTop="91dp"
                                    app:srcCompat="@drawable/fullstar" />

                                <ImageView
                                    android:id="@+id/imageView9"
                                    android:layout_width="18dp"
                                    android:layout_height="15dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginStart="51dp"
                                    android:layout_marginTop="91dp"
                                    app:srcCompat="@drawable/fullstar" />

                                <ImageView
                                    android:id="@+id/imageView11"
                                    android:layout_width="18dp"
                                    android:layout_height="15dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginStart="91dp"
                                    android:layout_marginTop="91dp"
                                    app:srcCompat="@drawable/fullstar" />

                                <ImageView
                                    android:id="@+id/imageView8"
                                    android:layout_width="18dp"
                                    android:layout_height="15dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginStart="13dp"
                                    android:layout_marginTop="91dp"
                                    app:srcCompat="@drawable/fullstar" />

                                <ImageView
                                    android:id="@+id/imageView13"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="13dp"
                                    android:layout_marginEnd="13dp"
                                    app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />

                                <TextView
                                    android:id="@+id/tv1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="20dp"
                                    android:text="#제로웨이스트샵"
                                    android:textColor="#00B06A"
                                    android:textSize="10dp" />

                                <TextView
                                    android:id="@+id/tv2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginStart="130dp"
                                    android:layout_marginTop="20dp"
                                    android:text="#달서구친환경"
                                    android:textColor="#00B06A"
                                    android:textSize="10dp" />

                                <TextView
                                    android:id="@+id/tv3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginTop="55dp"
                                    android:text="제로스테이"
                                    android:textColor="#000000"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView13"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginStart="99dp"
                                    android:layout_marginTop="61dp"
                                    android:text="생활용품점"
                                    android:textColor="#737272"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/textView14"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginBottom="48dp"
                                    android:text="대구 달서구 진천로 114"
                                    android:textColor="#7E7E7E"
                                    android:textSize="11sp" />

                                <TextView
                                    android:id="@+id/textView15"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginBottom="26dp"
                                    android:text="월요일 10:00~18:00 일요일 정기 휴무"
                                    android:textColor="#FF0000"
                                    android:textSize="11sp" />

                        </RelativeLayout>

                </LinearLayout>

        </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/hambuger_navigation_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginStart="15dp"
            app:menu="@menu/map_navigation_items" />

</androidx.drawerlayout.widget.DrawerLayout>
