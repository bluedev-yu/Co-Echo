<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadFeed"
    android:background="@color/CoEcho_mainBackground">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_cancleWriting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="취소"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_title" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="글쓰기"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/buttom_design"
            android:text="게시"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="300dp"
            android:gravity="top"
            android:hint="새 소식을 공유해보세요."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <ImageView
            android:id="@+id/iv_hashtag"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="@+id/et_text"
            app:layout_constraintTop_toBottomOf="@+id/et_text"
            app:srcCompat="@drawable/iv_hashtag" />

        <TextView
            android:id="@+id/tv_uploadHashtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="해시태그"
            app:layout_constraintBottom_toBottomOf="@+id/iv_hashtag"
            app:layout_constraintStart_toEndOf="@+id/iv_hashtag"
            app:layout_constraintTop_toTopOf="@+id/iv_hashtag" />

        <EditText
            android:id="@+id/et_hashtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:hint="#해시태그"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="@+id/iv_hashtag"
            app:layout_constraintStart_toEndOf="@+id/tv_uploadHashtag"
            app:layout_constraintTop_toTopOf="@+id/iv_hashtag" />

        <ImageView
            android:id="@+id/iv_privacy"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/iv_hashtag"
            app:layout_constraintTop_toBottomOf="@+id/iv_hashtag"
            app:srcCompat="@drawable/iv_privacy" />

        <RadioButton
            android:id="@+id/rb_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:onClick="onRadioButtonClicked"
            android:text="전체보기"
            app:layout_constraintBottom_toBottomOf="@+id/iv_privacy"
            app:layout_constraintStart_toEndOf="@+id/iv_privacy"
            app:layout_constraintTop_toTopOf="@+id/iv_privacy" />

        <RadioButton
            android:id="@+id/rb_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:onClick="onRadioButtonClicked"
            android:text="나만보기"
            app:layout_constraintBottom_toBottomOf="@+id/iv_privacy"
            app:layout_constraintStart_toEndOf="@+id/rb_public"
            app:layout_constraintTop_toTopOf="@+id/iv_privacy" />

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/iv_hashtag"
            app:layout_constraintTop_toBottomOf="@+id/iv_privacy"
            app:srcCompat="@drawable/iv_image" />

        <TextView
            android:id="@+id/tv_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="사진"
            app:layout_constraintBottom_toBottomOf="@+id/iv_photo"
            app:layout_constraintStart_toEndOf="@+id/iv_photo"
            app:layout_constraintTop_toTopOf="@+id/iv_photo" />

        <Button
            android:id="@+id/FeedPhotoUploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/buttom_design"
            android:text="업로드"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/tv_photo"
            app:layout_constraintStart_toEndOf="@+id/tv_photo"
            app:layout_constraintTop_toTopOf="@+id/tv_photo" />

        <ImageView
            android:id="@+id/ImagePreview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/iv_photo"
            app:layout_constraintTop_toBottomOf="@+id/tv_photo"
            app:srcCompat="@drawable/man1" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>