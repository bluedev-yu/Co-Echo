<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadFeed"
    android:background="@color/CoEcho_mainBackground">


    <ImageView
        android:id="@+id/imagePreviewInReview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/iv_photo2"
        app:layout_constraintTop_toBottomOf="@+id/iv_photo2"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
            android:id="@+id/tv_photo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="사진"
            app:layout_constraintBottom_toBottomOf="@+id/iv_photo2"
            app:layout_constraintStart_toEndOf="@+id/iv_photo2"
            app:layout_constraintTop_toTopOf="@+id/iv_photo2" />

        <ImageView
            android:id="@+id/iv_photo2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/iv_hashtag"
            app:layout_constraintTop_toBottomOf="@+id/iv_hashtag"
            app:srcCompat="@drawable/iv_photo" />

        <TextView
            android:id="@+id/tv_cancleWriting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="취소"
            android:textSize="15sp"
            android:textColor="#FF5C5C"
            app:layout_constraintBottom_toBottomOf="@+id/tv_writeFeed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_writeFeed" />

    <TextView
        android:id="@+id/tv_writeFeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="리뷰 쓰기"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ReviewImageUploadButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/buttom_design"
        android:text="사진업로드"
        app:layout_constraintBottom_toBottomOf="@+id/tv_photo2"
        app:layout_constraintStart_toEndOf="@+id/tv_photo2"
        app:layout_constraintTop_toTopOf="@+id/tv_photo2" />

    <TextView
            android:id="@+id/JustText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="가게에서 환경보호를 실천할 수 있었나요?"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_writeFeed" />

        <TextView
            android:id="@+id/rv_uploadReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="게시"
            android:textColor="#FF5C5C"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_writeFeed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_writeFeed" />

        <EditText
            android:id="@+id/rv_text"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:gravity="top"
            android:hint="리뷰를 작성해 보세요."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

        <ImageView
            android:id="@+id/iv_hashtag"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/rv_text"
            app:layout_constraintTop_toBottomOf="@+id/rv_text"
            app:srcCompat="@drawable/iv_hashtag" />

        <TextView
            android:id="@+id/tv_uploadHashtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="해시태그"
            app:layout_constraintBottom_toBottomOf="@+id/iv_hashtag"
            app:layout_constraintStart_toEndOf="@+id/iv_hashtag"
            app:layout_constraintTop_toTopOf="@+id/iv_hashtag" />

        <EditText
            android:id="@+id/rv_hashtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:hint="#해시태그"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="@+id/iv_hashtag"
            app:layout_constraintStart_toEndOf="@+id/tv_uploadHashtag"
            app:layout_constraintTop_toTopOf="@+id/iv_hashtag" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:max="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/JustText">

        </RatingBar>


</androidx.constraintlayout.widget.ConstraintLayout>