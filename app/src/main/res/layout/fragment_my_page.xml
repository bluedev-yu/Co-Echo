<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MyPageDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CoEcho_mainBackground"
    tools:context=".fragment.FragmentMyPage">


    <!-- 상단 -->

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/mypage_drawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        app:menu="@menu/mypage_items" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/mypage_tab_background"
            app:layout_constraintTop_toBottomOf="@+id/MyPageFollower">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/MyPageTabs"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#00000000"
                    app:tabIndicatorColor="#00B06A"
                    app:tabIndicatorFullWidth="false"
                    app:tabMode="fixed"
                    app:tabSelectedTextColor="#00B06A" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></androidx.viewpager.widget.ViewPager>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/FollowButton"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/buttom_design"
            android:text="로그아웃"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/MyPageFollowing"
            app:layout_constraintStart_toEndOf="@+id/MyPageFollowing"
            app:layout_constraintTop_toTopOf="@+id/MyPageFollowing"></androidx.appcompat.widget.AppCompatButton>

        <TextView
            android:id="@+id/MyPageFollowing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="0 팔로잉"
            app:layout_constraintBottom_toBottomOf="@+id/MyPageFollower"
            app:layout_constraintStart_toEndOf="@+id/MyPageFollower"
            app:layout_constraintTop_toTopOf="@+id/MyPageFollower"></TextView>

        <TextView
            android:id="@+id/MyPageFollower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="5dp"
            android:text="0 팔로워"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MyPageTitle"></TextView>

        <TextView
            android:id="@+id/MyPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="15dp"
            android:text="칭호"
            android:textColor="#00B06A"
            app:layout_constraintEnd_toEndOf="@+id/MyPageFollowing"
            app:layout_constraintStart_toStartOf="@+id/frameLayout2"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout2"></TextView>

        <TextView
            android:id="@+id/MyPageUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="임시이름"
            app:layout_constraintBottom_toBottomOf="@+id/MyPageTitle"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout2"
            app:layout_constraintStart_toEndOf="@+id/MyPageTitle"
            app:layout_constraintTop_toTopOf="@+id/MyPageTitle"></TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/MyPageProfileOptionButton"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="@drawable/mypage_profileoptionbutton"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout2"
            app:layout_constraintTop_toTopOf="@+id/frameLayout2"></androidx.appcompat.widget.AppCompatButton>

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MyEchoText">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/MypageProfileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/default_profilephoto" />

        </FrameLayout>

        <ImageView
            android:id="@+id/MyPageOptionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_baseline_menu_50"
            app:layout_constraintBottom_toBottomOf="@+id/MyEchoText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/MypageText" />

        <TextView
            android:id="@+id/MyEchoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:text="나의 에코"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/MypageText"
            app:layout_constraintTop_toBottomOf="@+id/MypageText" />

        <TextView
            android:id="@+id/MypageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="MYPAGE"
            android:textColor="#00B06A"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- 도장이랑 프로필수정 보이는곳 -->


</androidx.drawerlayout.widget.DrawerLayout>

