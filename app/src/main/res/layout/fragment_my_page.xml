<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/CoEcho_mainBackground"
    tools:context=".fragment.FragmentMyPage">

    <!-- 전체 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <!-- 상단 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <!-- mypage, 나의 에코 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MY PAGE"
                    android:textColor="#00B06A"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:text="나의 에코"
                    android:textColor="@color/black"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/MyPageOptionButton"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/optionbutton">

                </androidx.appcompat.widget.AppCompatButton>
            </LinearLayout>
        </LinearLayout>

        <!-- 도장이랑 프로필수정 보이는곳 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.3"
            android:orientation="vertical"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:id="@+id/MypageProfileImage"
                    android:background="@drawable/default_profilephoto"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="230dp"
                    android:id="@+id/MyPageProfileOptionButton"
                    android:background="@drawable/mypage_profileoptionbutton">
                </androidx.appcompat.widget.AppCompatButton>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/MyPageTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textColor="#00B06A"></TextView>

                <TextView
                    android:id="@+id/MyPageUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:background="@drawable/mypage_background">

            <!--
                        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:id="@+id/LogOutButton"></Button>
            -->

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/MyPageTabs"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorColor="#00B06A"
                app:tabSelectedTextColor="#00B06A"
                android:background="#00000000"

                app:tabMode="fixed">
            </com.google.android.material.tabs.TabLayout>

            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/viewPager">
            </androidx.viewpager.widget.ViewPager>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>