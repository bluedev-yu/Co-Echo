<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/CoEcho_mainBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/MyPageDrawerLayout"
    tools:context=".fragment.FragmentMyPage"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <!-- 상단 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <!-- mypage, 나의 에코 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="MYPAGE"
                    android:textColor="#00B06A"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layoutDirection="rtl"
                    android:text="나의 에코"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_menu_50"
                    android:id="@+id/MyPageOptionButton" />


                <!--                <androidx.appcompat.widget.AppCompatButton-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:id="@+id/MyPageOptionButton"-->
                <!--                    android:layout_marginTop="10dp"-->
                <!--                    android:layout_marginBottom="10dp"-->
                <!--                    android:layout_marginLeft="15dp"-->
                <!--                    android:layout_marginRight="15dp"-->
                <!--                    android:background="@drawable/ic_baseline_menu_50">-->
                <!--                </androidx.appcompat.widget.AppCompatButton>-->

            </LinearLayout>
        </LinearLayout>

        <!-- 도장이랑 프로필수정 보이는곳 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.3"
            android:orientation="vertical"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:id="@+id/MypageProfileImage"
                    android:background="@drawable/default_profilephoto"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="230dp"
                    android:id="@+id/MyPageProfileOptionButton"
                    android:background="@drawable/mypage_profileoptionbutton">
                </androidx.appcompat.widget.AppCompatButton>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/MyPageTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textColor="#00B06A"></TextView>

                <TextView
                    android:id="@+id/MyPageUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:textAlignment="center"
                android:textSize="17dp">

                <TextView
                    android:id="@+id/MyPageFollower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="0 팔로워"></TextView>

                <TextView
                    android:id="@+id/MyPageFollowing"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="0 팔로잉"
                    android:layout_height="wrap_content"></TextView>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="팔로우"
                    android:textColor="@color/white"
                    android:background="@drawable/buttom_design"
                    >
                </androidx.appcompat.widget.AppCompatButton>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:background="@drawable/mypage_background"
            android:orientation="vertical">

            <!--
                        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:id="@+id/LogOutButton"></Button>
            -->

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/MyPageTabs"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#00000000"
                app:tabIndicatorColor="#00B06A"
                app:tabIndicatorFullWidth="false"
                app:tabMode="fixed"

                app:tabSelectedTextColor="#00B06A"></com.google.android.material.tabs.TabLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></androidx.viewpager.widget.ViewPager>

        </LinearLayout>

    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/mypage_drawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        app:menu="@menu/mypage_items" />

</androidx.drawerlayout.widget.DrawerLayout>